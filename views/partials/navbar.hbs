    <option value="4">Controversial</option>
    <option value="5">No Replies</option>
</select>
<script>console.log('navbar')</script>
<div class="input-group ">
    <input type="text" class="form-control" placeholder="Search..." />
        <div class="input-group-append">
            <button type="button" class="btn btn-secondary"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                </svg> Search</button>
            <button type="button" class="btn btn-outline-secondary dropdown-toggle dropdown-toggle-split" 
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#">By Title</a>
                <a class="dropdown-item" href="#">By User</a>
                <a class="dropdown-item" href="#">By Tag</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Advanced Search</a>
            </div>
        </div>
</div>
{{#if currentUser}}
    <img src="images/pfp.jpg"
    class="rounded-circle" width="60" alt="User"  id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" />
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
       <a class="dropdown-item" href="#"><img src="images/pfp.jpg" class="rounded-circle" width="60" alt="User"/>{{currentUser.name}}</a>
       <div class="dropdown-divider"></div>
       <a class="dropdown-item" href="#">logout</a>
    </div>
    
                            
